<h1>Ingredients Shopping List: </h1>

  <% @recipes.each do |recipe| %>
    <h2>
      <%= recipe.name %> ingredients:
    </h2>
    <br>
  <div class="container-fluid">
    <ul>
      <% recipe.ingredients.each do |ingredient| %>
        <h4><li><%= ingredient.name %></li></h4>
      <% end %>
      <br>
    </ul>
  </div>


      <% end %>
