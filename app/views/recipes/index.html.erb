<h1 class="text-center">Our Friendsgiving Menu</h1>

<div class= "container">
  <div class="row row-cols-4">
    <% @recipes.each do |recipe| %>
      <div class="card col" style="width: 18rem; margin: 10px 10px;">
        <%= image_tag(recipe.image, class: "img-thumbnail card-img-top mx-auto d-block", style: 'width: 10rem') if recipe.image.attached? %>
        <div class="text-center card-body">
          <h5 class="card-title"><%= link_to recipe.name, recipe %></h5>
          <p class="card-text">
            <% if recipe.user_id%>
              <%= recipe.user.email %> has claimed this recipe
            <% else %>
              <%= form_for recipe do |form| %>
                <%= form.hidden_field :user_id, value: current_user.id %>
                <%= form.submit "Claim this recipe", class: "btn btn-dark" %>
              <% end %>
            <% end %>
          </p>

        </div>
      </div> <br>
    <% end %>
  </div>
</div>

  <h1>
      <button><%= link_to "Add new recipe", new_recipe_path %></button>
  </h1>




